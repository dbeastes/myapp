extends layout

block layout
    h1=message
        h2  
            table(class = "table table-striped table-bordered table-condensed table-hover")
                thead(class = 'table table-inverse')
                    tr
                        td Name
                        td(align = 'right') Weight
                tbody
                    each kitten in kittens
                        tr
                            td=kitten.name
                            td(align = 'right')=kitten.weight
            